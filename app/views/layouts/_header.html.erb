<!-- app/views/layouts/_header.html.erb -->
<header class="navbar navbar-expand-lg navbar-dark bg-success">
  <div class="container-fluid">
    <%= link_to "MyApp", root_path, class: "navbar-brand" %>

    <nav class="ml-auto d-flex">
      <% if user_signed_in?  %>
        <!-- ログイン後 -->
        <%= link_to "タスク一覧", tasks_path, class: "nav-link text-white" %>
        <%= link_to "プロフィール", user_path(current_user), class: "nav-link text-white" %>
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link text-white" %>
      <% else %>
        <!-- ログイン前 -->
        <%= link_to "ログイン", new_user_session_path, class: "nav-link text-white" %>
        <%= link_to "新規登録", new_user_registration_path, class: "nav-link text-white" %>
      <% end %>
    </nav>
  </div>
</header>   
